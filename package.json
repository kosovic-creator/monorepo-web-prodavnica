{
  "name": "monorepo-web-prodavnica",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "autoprefixer": "^10.4.22",
    "bcryptjs": "^3.0.3",
    "next-auth": "^4.24.13",
    "postcss": "^8.5.6",
    "prisma": "^6.19.0",
    "tailwindcss": "^4.1.17",
    "turbo": "^2.6.1"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "prisma:generate": "prisma generate --schema=packages/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev  --schema=packages/prisma/schema.prisma",
    "link:prisma": "sh ./link-prisma.sh",
    "build:client": "cd apps/client && prisma generate --schema=../../prisma/schema.prisma && next build",
    "build:admin": "cd apps/admin && prisma generate --schema=../../prisma/schema.prisma && next build"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "bcryptjs": "^3.0.2"
  },
  "packageManager": "npm@11.6.2"
}
